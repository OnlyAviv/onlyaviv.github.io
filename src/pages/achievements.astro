---
import { Icon } from "astro-icon/components";
import achievements from "../data/achievements.json";
import StaticLayout from "../layouts/StaticLayout.astro";
import BackTo from "../components/BackTo.astro";
---

<StaticLayout title="Achievements">
  <BackTo />
  <h1 class="mb-8 text-center text-4xl font-bold">My Achievements</h1>
  <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
    {
      achievements.map((achievement) => (
        <div class="rounded-lg bg-white p-6 text-center shadow-md">
          <div class="mb-4 flex justify-center">
            <Icon class="h-12 w-12 text-red-600" name={achievement.icon} />
          </div>
          <h3 class="mb-2 text-xl font-semibold">{achievement.title}</h3>
          {achievement.url && (
            <a
              href={achievement.url}
              class="font-semibold text-red-600 transition-colors duration-300 hover:text-red-700"
            >
              Learn More
            </a>
          )}
        </div>
      ))
    }
  </div>
</StaticLayout>
