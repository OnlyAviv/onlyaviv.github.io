---
import { Icon } from "astro-icon/components";
import projects from "../data/projects.json";
import StaticLayout from "../layouts/StaticLayout.astro";
import BackTo from "../components/BackTo.astro";
---

<StaticLayout title="Projects">
  <BackTo />
  <h1 class="mb-8 text-center text-4xl font-bold">My Projects</h1>
  <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
    {
      projects.map((project) => (
        <div class="flex flex-col overflow-hidden rounded-lg bg-white shadow-md">
          {project.image && (
            <img
              src={project.image}
              alt={project.title}
              class="h-48 w-full object-cover"
            />
          )}
          <div class="flex-1 p-6 pb-0">
            <h2 class="mb-2 text-2xl font-semibold">{project.title}</h2>
            <p class="mb-4 text-gray-600">{project.description}</p>
            <div class="mb-4">
              <h3 class="mb-2 text-lg font-semibold">Technologies Used:</h3>
              <div class="flex flex-wrap gap-2">
                {project.technologies.map((tech) => (
                  <span class="rounded bg-red-100 px-2.5 py-0.5 text-sm font-medium text-red-800">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </div>
          <div class="mt-auto flex justify-between p-6 pt-0">
            <a
              href={project.githubLink}
              class="inline-flex items-center font-semibold text-red-600 transition-colors duration-300 hover:text-red-700"
            >
              <Icon name="mdi:github" size={20} class="mr-1" />
              View Code
            </a>
            {project.website && (
              <a
                href={project.website}
                class="inline-flex items-center font-semibold text-red-600 transition-colors duration-300 hover:text-red-700"
              >
                <Icon name="mdi:external-link" size={20} class="mr-1" />
                Website
              </a>
            )}
          </div>
        </div>
      ))
    }
  </div>
</StaticLayout>
