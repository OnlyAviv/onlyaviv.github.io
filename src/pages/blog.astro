---
import StaticLayout from "../layouts/StaticLayout.astro";
import BackTo from "../components/BackTo.astro";
import BlogPostCard from "../components/BlogPostCard.astro";

const blogs = Object.values(import.meta.glob("./posts/*.md", { eager: true }));
---

<StaticLayout title="Blog">
  <BackTo />
  <h1 class="mb-8 text-center text-4xl font-bold">Blog Posts</h1>
  <div class="grid grid-cols-1 gap-8 space-y-12 md:grid-cols-2">
    {blogs.map((post) => <BlogPostCard post={post} />)}
  </div>
</StaticLayout>
