---
import { Icon } from "astro-icon/components";
import StaticLayout from "../layouts/StaticLayout.astro";
import BackTo from "../components/BackTo.astro";

const langs = [
  { lang: "English", level: "Native" },
  { lang: "Hebrew", level: "Intermediate" },
];

const interests = [
  "Open-source contribution",
  "AI and Machine Learning",
  "Software Security",
  "Reading and Writing",
];

const certifications = [
  "Google Certified in Digital Marketing",
  "ISCÂ² Candidate",
];

const experiences = [
  {
    title: "Contibutor + Website Designer",
    company: "Node.js",
    period: "2024 - Present",
    responsibilities: [
      "Added glob support to various core modules, such as node:test coverage and node:path",
      "Removed over 500,000 lines of tech debt",
      "Designing the new API Documentation",
    ],
  },
];

const skills = [
  "JavaScript",
  "React",
  "Node.js",
  "Python",
  "TypeScript",
  "CI/CD",
];
---

<StaticLayout title="Resume">
  <BackTo />
  <div class="overflow-hidden rounded-lg bg-white shadow-xl">
    {/* Header */}
    <header class="bg-red-600 p-8 text-white">
      <h1 class="mb-2 text-4xl font-bold">Aviv Keller</h1>
      <p class="text-xl">Software Engineer + Cybersecurity Analyst</p>
    </header>

    {/* Contact Information */}
    <section class="flex flex-wrap justify-center gap-4 bg-red-100 p-6">
      {
        [
          {
            href: "mailto:hello@onlyaviv.com",
            icon: "mdi:email",
            text: "hello@onlyaviv.com",
          },
          {
            href: "https://github.com/onlyaviv",
            icon: "mdi:github",
            text: "github.com/onlyaviv",
          },
          {
            href: "https://linkedin.com/in/onlyaviv",
            icon: "mdi:linkedin",
            text: "linkedin.com/in/onlyaviv",
          },
        ].map((item, index) => (
          <a
            href={item.href}
            target="_blank"
            rel="noopener noreferrer"
            class="animate-fadeIn inline-flex items-center rounded-full bg-white px-3 py-1 text-red-600 shadow-sm transition-all duration-300 hover:scale-105 hover:text-red-700 hover:shadow-md"
            style={{ animationDelay: `${index * 100}ms` }}
          >
            <Icon name={item.icon} size={16} />
            <span class="ml-2">{item.text}</span>
          </a>
        ))
      }
    </section>

    {/* Summary */}
    <section class="p-8">
      <h2 class="mb-4 flex items-center text-2xl font-bold">
        <Icon name="mdi:star" class="mr-2 text-red-600" />
        Professional Summary
      </h2>
      <div class="rounded-lg bg-gray-100 p-6 shadow-inner">
        <p class="leading-relaxed text-gray-700">
          My expertise lies in cybersecurity analysis of cloud systems,
          including GitHub Actions, as well as developing software solutions. I
          am passionate about securing cloud workflows and creating robust,
          efficient applications that meet modern challenges. With a strong
          foundation in cloud security and software development, I bring a
          commitment to clean code practices, secure design principles, and
          continuous learning. I thrive on tackling complex problems and
          collaborating with diverse teams to drive innovation and build secure,
          scalable solutions.
        </p>
      </div>
    </section>

    {/* Work Experience */}
    <section class="p-8">
      <h2 class="mb-4 flex items-center text-2xl font-bold">
        <Icon name="mdi:briefcase" class="mr-2 text-red-600" />
        Work Experience
      </h2>
      <div class="space-y-6">
        {
          experiences.map((exp, index) => (
            <div class="rounded-lg bg-white p-6 shadow-md transition-shadow duration-300 hover:shadow-lg">
              <h3 class="text-xl font-semibold">{exp.title}</h3>
              <p class="mb-2 text-red-600">
                {exp.company} | {exp.period}
              </p>
              <ul class="list-inside list-disc space-y-1 text-gray-700">
                {exp.responsibilities.map((resp, i) => (
                  <li>{resp}</li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </section>

    {/* Skills */}
    <section class="bg-gray-50 p-8">
      <h2 class="mb-4 flex items-center text-2xl font-bold">
        <Icon name="mdi:code" class="mr-2 text-red-600" />
        Technical Skills
      </h2>
      <div class="flex flex-wrap gap-2">
        {
          skills.map((skill) => (
            <span class="rounded-full bg-red-100 px-3 py-1 text-sm font-medium text-red-800 shadow-sm transition-shadow duration-300 hover:shadow-lg">
              {skill}
            </span>
          ))
        }
      </div>
    </section>

    {/* Certifications */}
    <section class="bg-gray-50 p-8">
      <h2 class="mb-4 flex items-center text-2xl font-bold">
        <Icon name="mdi:award" class="mr-2 text-red-600" />
        Certifications
      </h2>
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
        {
          certifications.map((cert, index) => (
            <div class="flex items-center rounded-lg bg-white p-4 shadow-md transition-shadow duration-300 hover:shadow-lg">
              <Icon name="mdi:award" class="mr-2 text-red-600" size={20} />
              <span>{cert}</span>
            </div>
          ))
        }
      </div>
    </section>

    {/* Languages */}
    <section class="p-8">
      <h2 class="mb-4 flex items-center text-2xl font-bold">
        <Icon name="mdi:earth" class="mr-2 text-red-600" />
        Languages
      </h2>
      <div class="flex flex-wrap gap-4">
        {
          langs.map((item, index) => (
            <div class="flex flex-col items-center rounded-lg bg-white p-4 shadow-md transition-shadow duration-300 hover:shadow-lg">
              <span class="font-semibold">{item.lang}</span>
              <span class="text-sm text-gray-600">{item.level}</span>
            </div>
          ))
        }
      </div>
    </section>

    {/* Interests */}
    <section class="bg-gray-50 p-8">
      <h2 class="mb-4 flex items-center text-2xl font-bold">
        <Icon name="mdi:security" class="mr-2 text-red-600" />
        Interests
      </h2>
      <div class="flex flex-wrap gap-2">
        {
          interests.map((interest, index) => (
            <span class="rounded-full bg-white px-3 py-1 text-sm font-medium text-gray-800 shadow-md transition-shadow duration-300 hover:shadow-lg">
              {interest}
            </span>
          ))
        }
      </div>
    </section>
  </div>
</StaticLayout>
