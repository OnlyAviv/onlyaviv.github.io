---
import { Icon } from "astro-icon/components";

const { icon, href, rel } = Astro.props;
const ariaLabel = `Link to ${new URL(href).hostname}`;
---

<a
  {rel}
  {href}
  target="_blank"
  aria-label={ariaLabel}
  class="transform text-gray-600 transition-transform duration-300 hover:scale-110 hover:text-red-600"
>
  <Icon name={icon} size={24} />
</a>
