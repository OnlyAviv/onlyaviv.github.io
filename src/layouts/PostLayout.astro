---
import { Icon } from "astro-icon/components";
import BackTo from "../components/BackTo.astro";
import StaticLayout from "./StaticLayout.astro";

// Destructure frontmatter and compiled content from Astro props
const { frontmatter, compiledContent } = Astro.props;
const shareText = encodeURIComponent(" posted this AMAZING article!");

const shareURLs = [
  {
    icon: "simple-icons:x",
    url: `https://twitter.com/share?url=${Astro.url}&text=${encodeURIComponent("@aviv_keller")}${shareText}`,
  },
  {
    icon: "simple-icons:linkedin",
    url: `https://www.linkedin.com/shareArticle?url=${Astro.url}&text=${encodeURIComponent("Aviv Keller")}${shareText}`,
  },
];
---

<StaticLayout title={frontmatter.title}>
  <div class="container">
    <BackTo name="Blog" href="/blog" />

    <article
      class="mx-auto max-w-3xl overflow-hidden rounded-lg bg-white shadow-md"
    >
      <div class="p-8">
        <h1 class="mb-4 text-center text-4xl font-bold">{frontmatter.title}</h1>
        <div class="mb-6 flex flex-row justify-between text-gray-600">
          <span class="mr-2">{frontmatter.pubDate}</span>
          <span class="flex items-center">
            <Icon name="mdi:clock" size={16} class="mr-2" />
            {frontmatter.readingTime} read
          </span>
        </div>
        <div class="prose max-w-none">
          <Fragment set:html={compiledContent()} />
        </div>
      </div>
    </article>
    <div class="mx-auto mt-8 flex max-w-3xl items-center justify-between">
      <div class="text-gray-600">Share this post:</div>
      <div class="flex space-x-4">
        {
          shareURLs.map(({ icon, url }) => (
            <a
              href={url}
              class="text-red-600 transition-colors duration-300 hover:text-red-700"
            >
              <Icon name={icon} size={18} />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</StaticLayout>
