---
import BackToPortfiolio from '../components/BackToPortfiolio.astro';
import Hero from '../components/Hero.astro';
import StaticLayout from './StaticLayout.astro';

// Destructure frontmatter and compiled content from Astro props
const { frontmatter, compiledContent } = Astro.props;
---

<StaticLayout>
  <Hero height="h-[75vh]">
    <h1 class="text-5xl md:text-6xl font-extrabold mb-6 tracking-tight text-gray-900 dark:text-gray-100">
      {frontmatter.title} <!-- Display the title from frontmatter -->
    </h1>
    <h2 class="text-xl md:text-2xl font-medium mb-4 text-gray-600 dark:text-gray-400">
      {frontmatter.pubDate} <!-- Display the publication date -->
    </h2>
  </Hero>

  <BackToPortfiolio />

  <main class="container flex justify-center items-center min-h-screen min-w-full pt-10">
    <div class="
      prose
      prose-h1:font-bold prose-h1:text-xl prose-h1:text-red-600
      prose-a:text-red-500 hover:prose-a:text-red-700
      prose-p:text-justify
      prose-img:rounded-xl
      prose-headings:underline
      w-full max-w-4xl
    ">
      <Fragment set:html={compiledContent()} /> <!-- Render the compiled content -->
    </div>
  </main>
</StaticLayout>
