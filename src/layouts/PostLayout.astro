---
import { Icon } from "astro-icon/components";
import BackTo from "../components/BackTo.astro";
import StaticLayout from "./StaticLayout.astro";
import avatar from "../assets/images/avivkeller-logo.png";
import ShareButtons from "../components/ShareButtons.astro";
import { Image } from "astro:assets";

// Destructure frontmatter and compiled content from Astro props
let { frontmatter, compiledContent } = Astro.props;
---

<StaticLayout title={frontmatter.title}>
  <BackTo name="Blog" href="/blog" />

  <article
    class="mx-auto max-w-4xl overflow-hidden rounded-lg bg-white shadow-lg"
  >
    <div class="p-8">
      <div class="mb-6 flex items-center">
        <Image
          src={avatar}
          alt="Aviv Keller"
          class="mr-4 h-12 w-12 rounded-full"
        />
        <div>
          <h2 class="text-lg font-semibold">Aviv Keller</h2>
          <div class="flex items-center text-sm text-gray-500">
            <Icon name="mdi:calendar" class="mr-1 h-4 w-4" />
            <span class="mr-4">{frontmatter.pubDate}</span>
            <Icon name="mdi:clock" class="mr-1 h-4 w-4" />
            <span>{frontmatter.readingTime}</span>
          </div>
        </div>
      </div>
      <h1 class="mb-6 text-4xl font-bold">{frontmatter.title}</h1>
      <div class="prose mb-8 max-w-none" set:html={compiledContent()} />
      <div
        class="flex items-center justify-between border-t border-gray-200 pt-4"
      >
        <div class="text-gray-600">Share this post:</div>
        <ShareButtons frontmatter={frontmatter} />
      </div>
    </div>
  </article>
</StaticLayout>
